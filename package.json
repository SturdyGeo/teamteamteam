{
  "name": "teamteamteam",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "tsc --build",
    "typecheck": "tsc --build",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config tests/integration/vitest.config.ts",
    "knip": "knip",
    "install:cli": "bash ./scripts/install-cli.sh",
    "uninstall:cli": "bash ./scripts/uninstall-cli.sh",
    "build:cli": "bun build apps/cli/src/index.ts --compile --outfile dist/ttteam",
    "release": "bun run build && bun run build:cli",
    "clean": "rm -rf dist packages/*/dist apps/*/dist *.tsbuildinfo packages/*/*.tsbuildinfo apps/*/*.tsbuildinfo",
    "build:edge": "bun build apps/api/src/app.ts --bundle --outfile supabase/functions/api/app.bundle.js --format esm --target browser --external @supabase/supabase-js",
    "generate:homebrew-formula": "node ./scripts/generate-homebrew-formula.mjs",
    "db:push": "supabase db push",
    "db:reset": "supabase db reset --linked",
    "db:diff": "supabase db diff",
    "db:status": "supabase migration list",
    "web:dev": "bun run --filter @teamteamteam/web dev",
    "web:build": "bun run --filter @teamteamteam/web build",
    "web:typecheck": "bun run --filter @teamteamteam/web typecheck"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.0",
    "knip": "^5.84.1",
    "pg": "^8.18.0",
    "react-devtools-core": "^7.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18"
  }
}
